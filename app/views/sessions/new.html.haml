.page-header
  %h1 Login 

= form_tag session_path do
  
  .form-group
    = label_tag :email
    = email_field_tag :email, params[:email], class: "form-control"
  .form-group
    = label_tag :password
    = password_field_tag :password, params[:password], class: "form-control"
  .actions
    = submit_tag 'Enter Your Account', class: "btn btn-success"